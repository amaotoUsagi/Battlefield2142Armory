<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- ==================== EU Launcher ==================== -->

    <ThingDef ParentName="BaseBF2142MakeableGun">
        <defName>BF2142_EU_AV</defName>
        <label>Mitchell AV-18</label>
        <description>The Mitchell AV-18 Anti-Vehicle weapon is able to perforate even the most resilient cladding and cause extensive damage.</description>
        <graphicData>
            <texPath>BF2142/Things/Weapons/EU_AV</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.4</drawSize>
        </graphicData>
        <soundInteract>Interact_BF2142_Gun</soundInteract>
        <weaponClasses>
            <li>RangedHeavy</li>
        </weaponClasses>
        <statBases>
            <Bulk>9.83</Bulk>
            <Mass>5.22</Mass>
            <SwayFactor>1.42</SwayFactor>
            <ShotSpread>0.2</ShotSpread>
            <SightsEfficiency>2.07</SightsEfficiency>
            <RangedWeapon_Cooldown>2.02</RangedWeapon_Cooldown>
            <WorkToMake>17000</WorkToMake>
        </statBases>
        <costList>
            <Steel>65</Steel>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <weaponTags>
            <li>BF2142_EU_AV</li>
        </weaponTags>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <recoilAmount>15.31</recoilAmount>
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_Mitchell_HEAT</defaultProjectile>
                <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
                <warmupTime>1.96</warmupTime>
                <range>75</range>
                <minRange>5</minRange>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
                <soundCast>Shot_AV</soundCast>
                <muzzleFlashScale>14</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>1</magazineSize>
                <reloadTime>5.7</reloadTime>
                <ammoSet>AmmoSet_MitchellAV18</ammoSet>
            </li>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiUseBurstMode>FALSE</aiUseBurstMode>
                <aiAimMode>AimedShot</aiAimMode>
            </li>
        </comps>
        <recipeMaker>
            <researchPrerequisites>
                <li>CE_AdvancedLaunchers</li>
            </researchPrerequisites>
        </recipeMaker>
        <tools>
            <li Class="CombatExtended.ToolCE">
                <label>barrel</label>
                <capacities>
                <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>2.44</cooldownTime>
                <armorPenetrationBlunt>3.5</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
            </li>
        </tools>
        <modExtensions>
            <li Class="CombatExtended.GunDrawExtension">
                <DrawOffset>0.00,0.00</DrawOffset>
            </li>
        </modExtensions>
    </ThingDef>


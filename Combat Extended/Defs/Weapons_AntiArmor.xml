  <!-- ==================== Adv ==================== -->

    <ThingDef ParentName="BaseBF2142MakeableGun">
        <defName>BF2142_Adv_HAVR</defName>
        <label>Pilum H-AVR</label>
        <description>The Pilum H-AVR (Heavy Anti Vehicle Rifle) lacks any guidance package, instead relying on the high speed of its projectile to eliminate targets.</description>
        <graphicData>
            <texPath>BF2142/Things/Weapons/Adv_HAVR</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>2</drawSize>
        </graphicData>
        <soundInteract>Interact_BF2142_Gun</soundInteract>
        <weaponClasses>
            <li>RangedHeavy</li>
        </weaponClasses>
        <statBases>
            <Bulk>19.00</Bulk>
            <Mass>18.00</Mass>
            <SwayFactor>2.53</SwayFactor>
            <ShotSpread>0.01</ShotSpread>
            <SightsEfficiency>2.10</SightsEfficiency>
            <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
            <WorkToMake>37000</WorkToMake>
        </statBases>
        <costList>
            <Steel>125</Steel>
            <ComponentIndustrial>3</ComponentIndustrial>
            <Chemfuel>15</Chemfuel>
        </costList>
        <weaponTags>
            <li>BF2142_Adv_AV</li>
        </weaponTags>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <recoilAmount>5.47</recoilAmount>
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_40x150mm_HEDP</defaultProjectile>
                <!--defaultProjectile>Bullet_Adv_AV_AP</defaultProjectile-->
                <warmupTime>2.89</warmupTime>
                <range>86</range>
                <soundCast>Shot_Adv_AVR</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>

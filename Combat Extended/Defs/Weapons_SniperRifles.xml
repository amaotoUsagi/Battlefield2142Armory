<Defs>

  <!-- ==================== EU ==================== -->

    <ThingDef ParentName="BaseBF2142MakeableGun">
        <defName>BF2142_EU_Sniper</defName>
        <label>Morretti SR4</label>
        <description>The Morretti SR4 (Sniper Rifle 4) is a next generation sniping medium utilizing a semiautomatic configuration, high caliber round and telescopic sight to effectively assail long-range targets.</description>
        <graphicData>
            <texPath>BF2142/Things/Weapons/EU_Sniper</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.5</drawSize>
        </graphicData>
        <soundInteract>Interact_BF2142_Gun</soundInteract>
        <weaponClasses>
            <li>LongShots</li>
        </weaponClasses>
        <statBases>
            <Bulk>11.43</Bulk>
            <Mass>5.35</Mass>
            <SwayFactor>1.80</SwayFactor>
            <ShotSpread>0.02</ShotSpread>
            <SightsEfficiency>2.72</SightsEfficiency>
            <RangedWeapon_Cooldown>0.42</RangedWeapon_Cooldown>
            <WorkToMake>39500</WorkToMake>
        </statBases>
        <costList>
            <Steel>70</Steel>
            <ComponentIndustrial>7</ComponentIndustrial>
        </costList>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <recoilAmount>3.75</recoilAmount>
                <verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_50BMG_FMJ</defaultProjectile>
                <ticksBetweenBurstShots>120</ticksBetweenBurstShots>
                <warmupTime>1.7</warmupTime>
                <range>75</range>
                <soundCast>Shot_EU_Sniper</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>5</magazineSize>
                <reloadTime>4.5</reloadTime>
                <ammoSet>AmmoSet_50BMG</ammoSet>
            </li>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiAimMode>AimedShot</aiAimMode>
            </li>
        </comps>
        <weaponTags>
            <li>BF2142_EU_Sniper</li>
        </weaponTags>
        <tools>
            <li Class="CombatExtended.ToolCE">
                <label>stock</label>
                <capacities>
                <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.55</cooldownTime>
                <chanceFactor>1.5</chanceFactor>
                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
            </li>
            <li Class="CombatExtended.ToolCE">
                <label>muzzle</label>
                <capacities>
                <li>Poke</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.55</cooldownTime>
                <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
                <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
            </li>
        </tools>
        <recipeMaker>
            <researchPrerequisites>
                <li>CE_TurretHeavyWeapons</li>
                <li>PrecisionRifling</li>
            </researchPrerequisites>
        </recipeMaker>
        <modExtensions>
            <li Class="CombatExtended.GunDrawExtension">
                <DrawOffset>0.25,0.00</DrawOffset>
            </li>
        </modExtensions>
    </ThingDef>

